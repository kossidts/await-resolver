{
    "name": "await-resolver",
    "version": "1.0.0",
    "description": "A promise resolver that never throws. It always resolves with an array of type [error, result]. It eliminates the need to try-catch.",
    "main": "index.js",
    "exports": {
        "import": "./wrapper.mjs",
        "require": "./index.js"
    },
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kossidts/await-resolver.git"
    },
    "homepage": "https://github.com/kossidts/await-resolver#readme",
    "bugs": {
        "url": "https://github.com/kossidts/await-resolver/issues"
    },
    "keywords": [
        "await resolver",
        "async",
        "await",
        "resolver",
        "promise",
        "timeout",
        "delay",
        "sleep",
        "resolve",
        "reject",
        "error first",
        "try",
        "catch"
    ],
    "type": "commonjs",
    "author": "Kossi D. T. Saka",
    "license": "MIT",
    "devDependencies": {
        "jest": "^28.1.0"
    },
    "jest": {
        "testMatch": [
            "**/test/**/*.test.js"
        ],
        "verbose": true,
        "transform": {}
    }
}
